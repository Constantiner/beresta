{
	"name": "@constantiner/beresta",
	"version": "0.0.1",
	"description": "A minimalists logging library for JavaScript to use in browsers or in Node.js without dependencies",
	"main": "beresta.js",
	"scripts": {
		"test": "npx jest --config jest.config.json",
		"lint": "npx eslint '**/*.js' --fix",
		"format": "npx prettier 'src/*.js' '__tests__/*.js' --write",
		"clear_jest": "npx jest --clearCache",
		"lint-staged": "lint-staged"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Constantiner/beresta.git"
	},
	"keywords": [
		"log4j",
		"log4js",
		"log4javascript",
		"logging",
		"JavaScript"
	],
	"author": {
		"name": "Konstantin Kovalev",
		"email": "constantiner@gmail.com"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Constantiner/beresta/issues"
	},
	"homepage": "https://github.com/Constantiner/beresta#readme",
	"prettier": {
		"printWidth": 120,
		"useTabs": true,
		"tabWidth": 4
	},
	"engines": {
		"node": ">=7.6",
		"npm": ">=5.2.0"
	},
	"devDependencies": {
		"@babel/core": "^7.2.2",
		"@babel/preset-env": "^7.2.3",
		"@types/jest": "^23.3.11",
		"babel-core": "^7.0.0-bridge.0",
		"babel-jest": "^23.6.0",
		"eslint": "^5.11.1",
		"eslint-config-prettier": "^3.3.0",
		"husky": "^1.3.1",
		"jest": "^23.6.0",
		"jest-pnp-resolver": "^1.0.2",
		"lint-staged": "^8.1.0",
		"prettier": "^1.15.3",
		"regenerator-runtime": "^0.13.1"
	},
	"dependencies": {
		"date-fns": "^1.30.1"
	}
}
